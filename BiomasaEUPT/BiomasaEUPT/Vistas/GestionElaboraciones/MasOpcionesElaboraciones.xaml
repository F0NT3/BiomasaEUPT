                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} m³ / {1} ud." >
                                                <Binding Path="VolumenTotal" />
                                                <Binding Path="UnidadesTotales" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </StackPanel>
                            </materialDesign:TransitioningContent>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </GroupBox>


