    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0" Grid.RowSpan="2" Style="{DynamicResource MaterialDesignCardGroupBox}" FontSize="20" Margin="0,0,0,0">

            <GroupBox.Header>
                <materialDesign:ColorZone Mode="PrimaryMid">
                    <DockPanel>
                        <materialDesign:PopupBox DockPanel.Dock="Right" PlacementMode="BottomAndAlignRightEdges" StaysOpen="False" Width="25" >
                            <StackPanel>
                                <Button Content="Añadir" Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                                    <Button.CommandParameter>
                                        <StackPanel Margin="16">
                                            <TextBlock>Nuevo tipo.</TextBlock>
                                            <TextBox x:Name="tbNombre" materialDesign:HintAssist.Hint="Nombre" Margin="10"
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                                <TextBox.Text>
                                                    <Binding Path="Nombre" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding.ValidationRules>
                                                            <validadores:RequeridoValidationRule NombreCampo="nombre" ValidatesOnTargetUpdated="True" />
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>
                                            <TextBox x:Name="tbDescripcion" materialDesign:HintAssist.Hint="Descripción" Margin="10"
                                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                                                <TextBox.Text>
                                                    <Binding Path="Descripcion" UpdateSourceTrigger="PropertyChanged">
                                                        <Binding.ValidationRules>
                                                            <validadores:RequeridoValidationRule NombreCampo="descripción" ValidatesOnTargetUpdated="True" />
                                                        </Binding.ValidationRules>
                                                    </Binding>
                                                </TextBox.Text>
                                            </TextBox>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                                                <Button x:Name="bNuevoTipo" IsDefault="True" Margin="0 8 8 0" Command="materialDesign:DialogHost.CloseDialogCommand"
                                                        Click="bNuevoTipo_Click">
                                                    <Button.Style>
                                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                                            <Setter Property="IsEnabled" Value="False" />
                                                            <Style.Triggers>
                                                                <MultiDataTrigger>
                                                                    <MultiDataTrigger.Conditions>
                                                                        <Condition Binding="{Binding ElementName=tbNombre, Path=(Validation.HasError)}" 
                                                                                   Value="False" />
                                                                        <Condition Binding="{Binding ElementName=tbDescripcion, Path=(Validation.HasError)}" 
                                                                                   Value="False" />
                                                                    </MultiDataTrigger.Conditions>
                                                                    <Setter Property="IsEnabled" Value="True" />
                                                                </MultiDataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                    <Button.CommandParameter>
                                                        <system:Boolean>True</system:Boolean>
                                                    </Button.CommandParameter>
                                                    ACEPTAR
                                                </Button>
                                                <Button Style="{StaticResource MaterialDesignFlatButton}"
                                                        IsCancel="True" Margin="0 8 8 0"
                                                        Command="materialDesign:DialogHost.CloseDialogCommand">
                                                    <Button.CommandParameter>
                                                        <system:Boolean>False</system:Boolean>
                                                    </Button.CommandParameter>
                                                    CANCELAR
                                                </Button>
                                            </StackPanel>
                                        </StackPanel>
                                    </Button.CommandParameter>
                                </Button>
                                <Button Content="Editar">
                                    <Button.Style>
                                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFlatButton}">
                                            <Setter Property="IsEnabled" Value="False" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=lbFiltro, Path=SelectedItems.Count}" Value="1">
                                                    <Setter Property="IsEnabled" Value="True" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button Content="Borrar" IsEnabled="{Binding ElementName=lbFiltro, Path=SelectedItem}"/>
                            </StackPanel>
                        </materialDesign:PopupBox>
                        <TextBlock Text="Filtrar" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </DockPanel>
                </materialDesign:ColorZone>
            </GroupBox.Header>

            <ListBox x:Name="lbFiltro" Margin="0 0 0 0" SelectedIndex="-1" SelectionMode="Multiple">
                <ListBox.ItemsSource>
                    <CompositeCollection x:Name="cmpc">
                        <!--ListBoxItem x:Name="lbiTodos" Margin="0 0 0 0" FontSize="14">Todos</ListBoxItem-->
                        <CollectionContainer x:Name="ccFiltro"/>
                        <!--DataTemplate x:Name="dtFiltro">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding Path=nombre}"/>
                                <TextBlock Text="{Binding Path=descripcion}"/>
                            </StackPanel>
                        </-->
                    </CompositeCollection>
                </ListBox.ItemsSource>
                <!--ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding nombre}" FontSize="14" FontWeight="Bold"/>
                            <TextBlock Text="{Binding descripcion}" FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate-->
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="8 0 0 0">
                            <TextBlock FontWeight="Bold" Text="{Binding nombre}" FontSize="14"/>
                            <TextBlock Text="{Binding descripcion}" FontSize="14"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ListBox>
        </GroupBox>

    </Grid>
    <!--/-->
</UserControl>
